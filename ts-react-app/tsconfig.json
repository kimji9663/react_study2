{
  "compilerOptions": {
    "types": [
      "react/next", 
      "react-dom/next", 
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"],
      "@styles/*": ["styles/*"],
    },
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "keyofStringsOnly": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "noResolve": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "typeRoots": ["node_modules/@types", "src/@type"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "./node_modules/**/*"
  ],
  "include": ["src", "@type"]
}